<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				<h2 align="center"><%= yield(:title) %></h2>
			</div>
			<div class="panel-body">
				<%= render 'shared/errors', object: @post %>
				<%= form_for @post, html: {class: "form-horizontal"} do |f| %>
				<div class="form-group">
					<%= f.label :title, class: "control-label col-md-2 col-md-offset-1" %>
					<div class="col-md-8">
						<%= f.text_field :title, class: "form-control" %>
					</div>
				</div>
				<div class="form-group">
					<%= f.label :body, class: "control-label col-md-2 col-md-offset-1" %>
					<div class="col-md-8">
						<%= f.text_area :body, class: "form-control" %>
					</div>
				</div>
				<%= f.submit @post.new_record? ? "Add Review" : "Update Review", class: "btn btn-primary col-md-offset-5" %>
			<% end %>
			</div>
		</div>
	</div>
</div>